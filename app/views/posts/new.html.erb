<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-2 sidenav">
    </div>
    <div class="col-sm-8 text-left">
      <% if notice %>
        <hr>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>
      <h1>New Post</h1>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <%= form_for @post do |f| %>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>

            <div id="sort_fields">
              <% sorted_fields(@post).each do |field| %>
                <%= content_tag(:div, field, class: 'form-group') %>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.submit 'Save Post', class: 'btn btn-primary' %>
              <%= link_to 'Add Field', create_field_posts_path, class: 'btn btn-default', id: :create_field, method: :post, remote: true %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
    <div class="col-sm-2 sidenav">
    </div>
  </div>
</div>
